<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.appbar.AppBarLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/appbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/translucent"
    android:theme="@style/Theme.TranslucentBar">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/appToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="50dp"
        app:theme="@style/Theme.TranslucentBar"
        app:contentInsetStart="0dp"
        app:title="@null"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/ivl_icon"
            style="@style/style_icon_size"
            android:layout_gravity="start|center_vertical"
            android:layout_marginStart="10dp"
            android:rotation="180"
            app:srcCompat="@mipmap/ic_next_page64"
            tools:ignore="ContentDescription" />


        <TextView
            android:id="@+id/tvl_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_vertical"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="18sp" />


        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="16sp"
            tools:ignore="SpUsage" />

        <ImageView
            android:id="@+id/ivr_icon"
            style="@style/style_icon_size"
            android:layout_gravity="end|center_vertical"
            android:layout_marginEnd="10dp"
            android:visibility="invisible"
            tools:ignore="ContentDescription" />


        <TextView
            android:id="@+id/tvr_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:visibility="gone"
            tools:ignore="RtlHardcoded,SpUsage" />
    </androidx.appcompat.widget.Toolbar>

</com.google.android.material.appbar.AppBarLayout>