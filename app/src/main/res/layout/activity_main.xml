<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/btnRemoveAll"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnInit"
        style="@style/style_button"
        android:layout_width="match_parent"
        android:text="Init"
        app:layout_constraintBottom_toBottomOf="parent" />

    <Button
        android:id="@+id/btnAdd"
        style="@style/style_button"
        android:layout_width="match_parent"
        android:text="Add"
        app:layout_constraintBottom_toTopOf="@+id/btnInit" />

    <Button
        android:id="@+id/btnAddTo0"
        style="@style/style_button"
        android:layout_width="match_parent"
        android:text="Add To 0"
        app:layout_constraintBottom_toTopOf="@+id/btnAdd" />


    <Button
        android:id="@+id/btnInset"
        style="@style/style_button"
        android:layout_width="match_parent"
        android:text="Inset"
        app:layout_constraintBottom_toTopOf="@+id/btnAddTo0" />

    <Button
        android:id="@+id/btnInsetTo0"
        style="@style/style_button"
        android:layout_width="match_parent"
        android:text="Inset TO 0"
        app:layout_constraintBottom_toTopOf="@+id/btnInset" />

    <Button
        android:id="@+id/btnMove"
        style="@style/style_button"
        android:layout_width="match_parent"
        android:text="Move 0 and 8"
        app:layout_constraintBottom_toTopOf="@+id/btnInsetTo0" />

    <Button
        android:id="@+id/btnRemove"
        style="@style/style_button"
        android:layout_width="match_parent"
        android:text="Remove"
        app:layout_constraintBottom_toTopOf="@+id/btnMove" />

    <Button
        android:id="@+id/btnRemoveAll"
        style="@style/style_button"
        android:layout_width="match_parent"
        android:text="RemoveAll"
        app:layout_constraintBottom_toTopOf="@+id/btnRemove" />


</androidx.constraintlayout.widget.ConstraintLayout>